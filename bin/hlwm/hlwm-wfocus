#!/usr/bin/env bash

#: use rofi to focus a window with herbstluftwm

hc() { herbstclient "$@" ; }

windows() {
  while read -r winid tag _ window; do
    echo "<!--$winid-->$((tag+1)) $window"
  done < <(wmctrl -l | sort -r)
}

wrapper() {
  windows | rofi -theme "vertical.rasi" -dmenu -eh 1 -p "wfocus" -markup-rows -lines 10 -theme-str '
  window {
    width: 500px;
  }'
}

selection="$(wrapper)"

if [[ -n $selection ]]; then
  selection=${selection#*'<!--'}
  selection=${selection%'-->'*}
  hc jumpto "$selection"
fi

# i need like a mode switcher for this
# bring here -> focus there -> bring here -> etc


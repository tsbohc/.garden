#!/bin/bash

v_min=0
v_max=100

# get current
v=$(amixer -c 1 get Master | grep 'Mono:' | awk -F'[][]' '{ print $2 }')
v=${v:0:-1}

if ! [[ "$1" == 0 ]]; then
  # apply delta
  [[ -n "$1" ]] && v=$(( "$v" + "$1" ))
  (( "$v" < 0 )) && v=0
  (( "$v" > 100 )) && v=100

  # dunst
  v_bar=$(hbar "$v" "$v_max" 30 "─" "┘" "─")
  dunstify "volume" "$v_bar $v% " -r 83437187 -t 2000

  #execute
  amixer -c 1 set Master ${v}% -q
else
  v=${v::-1}
  #icons=( 婢    奔 奔 奔 墳 墳 墳 墳)
  icons=( ﱝ 奔 奔 奔 墳 墳 墳 墳 墳 墳 墳)
  echo "${icons[$v]}"
fi

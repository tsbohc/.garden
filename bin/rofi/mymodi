#!/usr/bin/env bash

prompt="a:"
echo -e "\0prompt\x1f$prompt"

if [ "$1" = "quit" ]; then
  exit 0
elif [ "$1" = "reload" ]; then
  echo "reload one"
  echo "reload two"
  exit 0 # clears the list because it doesn't get to the bottom of the script (where initial choices are)
elif [ "$1" = "back" ]; then
  : # no output, so it jumps back to the initial choices that were ignored above (back to the start)
  # TODO figure out if there's a way to simulate an option pick with a keybind
elif [ -n "$1" ]; then
  echo "new option"
  echo "back"
fi

echo "reload"
echo "quit"

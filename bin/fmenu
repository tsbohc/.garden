#!/bin/bash

#: dmenu-like terminal window powered by fzf

name="fzfmenu"

#st bash -c "fzf $* < /proc/$$/fd/0 > /proc/$$/fd/1"

alacritty \
  --class floatingTerminal,floatingTerminal \
  -t "$name" \
  -o "window.dimensions.columns=90" \
  -o "window.dimensions.lines=6" \
  -o "window.padding.x=0" \
  -o "window.padding.y=16" \
  -e sh -c "fzf $* --info=hidden \
                   --no-multi \
                   --no-unicode \
                   --tiebreak=end \
                   --no-sort \
                   --tac \
                   --bind tab:down \
                   --bind shift-tab:up \
                   --bind change:first \
                   < /proc/$$/fd/0 > /proc/$$/fd/1"

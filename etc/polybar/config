[colors]
background = #00ffffff
foreground = #bbffffff

[bar/main]
enable-ipc = true

width = 100%
height = 21

background = ${colors.background}
foreground = ${colors.foreground}

#font-0 = RobotoMono Nerd Font:style=Medium:size=10;2
font-0 = Iosevka Custom:style=Medium:size=10;4
font-1 = RobotoMono Nerd Font:style=Medium:size=12;4
font-2 = Iosevka Custom:style=Medium:size=14;5

padding-left = 1
padding-right = 1

module-margin-left = 0
module-margin-right = 0

border-top-size = 0
underline-size = 0

fixed-center = true
bottom = true

#modules-left = wttr
modules-center = hc-tags
modules-right = date

# nerd-clock

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/nerd-clock]
type = custom/script
interval = 900

exec = bash nerd-clock

label = " %{T2}%output%%{T-}"

[module/date]
type = internal/date
interval = 60

date-alt = " %A, %B %d,"

time = "%I:%M %p"
time-alt = "%I:%M %p"

label = "%date% %time%"

[module/wttr]
type = custom/script
interval = 1800

exec = bash wttr-weather

label = "%{A1:$BROWSER yandex.ru/pogoda:}%output%%{A}"

[module/hc-tags]
type = custom/script
format-font = 3
exec = bash ~/.garden/etc/polybar/modules/hc-workspaces
tail = true
scroll-up = herbstclient use_index -1 --skip-visible
scroll-down = herbstclient use_index +1 --skip-visible

[module/volume]
type = custom/ipc
exec = volume-control 0
hook-0 = volume-control 0
initial = 1
scroll-up = volume-control 8 ; polybar-msg hook volume 1
scroll-down = volume-control -8 ; polybar-msg hook volume 1

[module/menu-apps]
type = custom/menu

; If true, <label-toggle> will be to the left of the menu items (default).
; If false, it will be on the right of all the items.
expand-right = true

; "menu-LEVEL-N" has the same properties as "label-NAME" with
; the additional "exec" property
;
; Commands will be executed using "/bin/sh -c $COMMAND"

menu-0-0 = Browsers
menu-0-0-exec = #menu-apps.open.1
menu-0-1 = Multimedia
menu-0-1-exec = #menu-apps.open.2

menu-1-0 = Firefox
menu-1-0-exec = firefox
menu-1-1 = Chromium
menu-1-1-exec = chromium

menu-2-0 = Gimp
menu-2-0-exec = gimp
menu-2-1 = Scrot
menu-2-1-exec = scrot

; Available tags:
;   <label-toggle> (default) - gets replaced with <label-(open|close)>
;   <menu> (default)
; If expand-right is true, the default will be "<label-toggle><menu>" and the
; other way around otherwise.
; Note that if you use <label-toggle> you must also include
; the definition for <label-open>
; format = <label-toggle><menu>

label-open = "襤 "
label-close = 

; Optional item separator
; Default: none
label-separator = " "

; vim:ft=dosini
